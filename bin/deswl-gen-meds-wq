#!/usr/bin/env python
"""
    %prog [options] medsconf coadd_run band

Generate a wq script.  It will call the meds script.
"""

import os,sys
from sys import stderr
import deswl
import desdb

from optparse import OptionParser
parser = OptionParser(__doc__)

parser.add_option("-q","--queue",default='serial', 
                  help="queue for processing, default: %default")

_template="""
command: |
    source ~/.bashrc
    %(cmd)s

job_name: %(job_name)s

group: [gen4,gen5]
"""

def main():
    options, args = parser.parse_args(sys.argv[1:])
    if len(args) < 3:
        parser.print_help()
        sys.exit(45)

    medsconf=args[0]
    coadd_run=args[1]
    band=args[2]

    df=desdb.files.DESFiles()
    cf=desdb.files.Coadd(coadd_run=coadd_run, band=band)
    cf.load()


    script_file=df.url(medsconf=medsconf,
                       type='meds_script',
                       coadd_run=coadd_run,
                       tilename=cf['tilename'],
                       band=band)

    wq_file=df.url(medsconf=medsconf,
                    type='meds_wq',
                    coadd_run=coadd_run,
                    tilename=cf['tilename'],
                    band=band)


    job_name='%s-%s' % (cf['tilename'],band)
    
    cmd="bash %s" % script_file

    text=_template % {'job_name':job_name,
                      'cmd':cmd}

    d=os.path.dirname(wq_file)
    if not os.path.exists(d):
        os.makedirs(d)

    print 'writing wq script:',wq_file

    with open(wq_file,'w') as fobj:
        fobj.write(text)
main()
